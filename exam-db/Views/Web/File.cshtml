@section scripts {
    <script>

        function selectReaction() {
             if ($('.user_reaction a#like').hasClass('selected')) {
                $('.user_reaction a#like i').removeClass("fa-heart-o");
                $('.user_reaction a#like i').addClass("fa-heart");
            } else {
                $('.user_reaction a#like i').addClass("fa-heart-o");
                $('.user_reaction a#like i').removeClass("fa-heart");
            }

             if ($('.user_reaction a#dislike').hasClass('selected')) {
                $('.user_reaction a#dislike i').removeClass("fa-thumbs-o-down");
                $('.user_reaction a#dislike i').addClass("fa-thumbs-down");
            } else {
                $('.user_reaction a#dislike i').addClass("fa-thumbs-o-down");
                $('.user_reaction a#dislike i').removeClass("fa-thumbs-down");
            }
        }

        $('.user_reaction a#like').on('click', function () {
            var $radios = $('input:radio[name=vote]');
            $radios.filter('[value=like]').get(0).checked = true;

            $(this).addClass('selected');
            $('.user_reaction a#dislike').removeClass('selected');
            selectReaction();

        });

        $('.user_reaction a#dislike').on('click', function () {
            var $radios = $('input:radio[name=vote]');
            $radios.filter('[value=dislike]').get(0).checked = true;

            $(this).addClass('selected');
            $('.user_reaction a#like').removeClass('selected');
            selectReaction();
        });
    </script>
